FC      = ftn
LD      = $(FC)
SWP     =
RM      = /bin/rm -f
MP      =
OLEVEL  = -O3
LIBS    = -lfftw3 -lm -ldl
FOPTS   = -mcmodel=medium -ffixed-line-length-140 -fno-align-commons -fbounds-check -Wall -cpp -J ./set_run/sc_compil>
FFLAGS  = $(FOPTS) $(OLEVEL)


LDFLAGS = $(FOPTS) $(OLEVEL)
PROF    =

FLWOBJS =  $(shell cat list_source.list)

MOD     =
OBJS    = $(FLWOBJS)
EXEC    =  ./set_run/sc_compiled/flow36

$(EXEC):        $(OBJS)
        $(LD) $(FFLAGS) $(OBJS) $(LIBS) -o $@

clean:
        $(RM) $(OBJS) $(EXEC)

.SUFFIXES: .o

.f90.o:
        $(FC)  -c $(FFLAGS) $
