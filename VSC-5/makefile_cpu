FC      = mpifort
LD      = $(FC)
SWP     =
RM      = /bin/rm -f
MP      =
OLEVEL  = -O3
FOPTS   = -mcmodel=medium -ffixed-line-length-140 -fno-align-commons -fbounds-check -Wall -cpp -J ./set_run/sc_compiled
FFLAGS  = $(FOPTS) $(OLEVEL)
LIBS    =  -I/gpfs/opt/sw/spack-0.17.1/opt/spack/linux-almalinux8-zen3/gcc-11.2.0/fftw-3.3.10-v3g4khag335uaretk3liam4rwzzyexuo/include -L/gpfs/opt/sw/spack-0.17.1/opt/spack/linux-almalinux8-zen3/gcc-11.2.0/fftw-3.3.10-v3g4khag335uaretk3liam4rwzzyexuo/lib  -lfftw3 -lm -ldl

LDFLAGS = $(FOPTS) $(OLEVEL)
PROF    =

FLWOBJS =  $(shell cat list_source.list)

MOD     =
OBJS    = $(FLWOBJS)
EXEC    =  ./set_run/sc_compiled/flow36

$(EXEC):        $(OBJS)
        $(LD) $(FFLAGS) $(OBJS) $(LIBS) -o $@

clean:
        $(RM) $(OBJS) $(EXEC)

.SUFFIXES: .o

.f90.o:
        $(FC)  -c $(FFLAGS) $
